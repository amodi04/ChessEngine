<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Chess.GUI.CapturedPiecesPanel">
    
    <!-- DockPanel to split white and black captured pieces -->
    <DockPanel LastChildFill="False" HorizontalAlignment="Center" Margin="10" Width="300" MaxWidth="300">
        
        <!-- Top Players Grid of captured pieces -->
        <UniformGrid x:Name="TopGrid" DockPanel.Dock="Top" Rows="2" Columns="8"/>
        
        <!-- Bottom Players Grid of captured pieces -->
        <UniformGrid x:Name="BottomGrid" DockPanel.Dock="Bottom" Rows="2" Columns="8"/>
    </DockPanel>
</UserControl>
